<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Combined Bot Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }
    
    .container {
      max-width: 1400px;
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.95);
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }
    
    .header {
      background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
      color: white;
      padding: 30px;
      text-align: center;
    }
    
    .header h1 {
      font-size: 2.5em;
      margin-bottom: 10px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .header p {
      font-size: 1.1em;
      opacity: 0.9;
    }
    
    .content {
      padding: 30px;
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }
    
    .stat-card {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      color: white;
      padding: 25px;
      border-radius: 10px;
      text-align: center;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    
    .stat-card:hover {
      transform: translateY(-5px);
    }
    
    .stat-card.verified {
      background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
    }
    
    .stat-card.profiled {
      background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
    }
    
    .stat-card.alliance {
      background: linear-gradient(135deg, #9C27B0 0%, #7B1FA2 100%);
    }
    
    .stat-card.translation {
      background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
    }
    
    .stat-number {
      font-size: 2.5em;
      font-weight: bold;
      margin-bottom: 10px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .stat-label {
      font-size: 1.1em;
      opacity: 0.9;
    }
    
    .charts-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      margin-bottom: 40px;
    }
    
    .chart-container {
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .chart-container h3 {
      color: #333;
      margin-bottom: 20px;
      text-align: center;
      font-size: 1.3em;
    }
    
    .recent-users {
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .recent-users h3 {
      color: #333;
      margin-bottom: 20px;
      font-size: 1.3em;
    }
    
    .user-list {
      max-height: 400px;
      overflow-y: auto;
    }
    
    .user-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      border-bottom: 1px solid #eee;
      transition: background-color 0.3s ease;
    }
    
    .user-item:hover {
      background-color: #f8f9fa;
    }
    
    .user-item:last-child {
      border-bottom: none;
    }
    
    .user-info {
      display: flex;
      flex-direction: column;
    }
    
    .user-name {
      font-weight: bold;
      color: #333;
    }
    
    .user-details {
      font-size: 0.9em;
      color: #666;
      margin-top: 5px;
    }
    
    .user-badges {
      display: flex;
      gap: 5px;
    }
    
    .badge {
      padding: 3px 8px;
      border-radius: 12px;
      font-size: 0.8em;
      color: white;
    }
    
    .badge.verified {
      background-color: #4CAF50;
    }
    
    .badge.translation {
      background-color: #FF9800;
    }
    
    .badge.alliance {
      background-color: #9C27B0;
    }
    
    .footer {
      background: #333;
      color: white;
      text-align: center;
      padding: 20px;
      font-size: 0.9em;
    }
    
    .live-indicator {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #4CAF50;
      color: white;
      padding: 10px 15px;
      border-radius: 20px;
      font-size: 0.9em;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
    }
    
    .live-dot {
      display: inline-block;
      width: 8px;
      height: 8px;
      background: white;
      border-radius: 50%;
      margin-right: 5px;
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0% { opacity: 1; }
      50% { opacity: 0.5; }
      100% { opacity: 1; }
    }
    
    @media (max-width: 768px) {
      .charts-section {
        grid-template-columns: 1fr;
      }
      
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .header h1 {
        font-size: 2em;
      }
    }
  </style>
</head>
<body>
  <div class="live-indicator">
    <span class="live-dot"></span>
    LIVE
  </div>
  
  <div class="container">
    <div class="header">
      <h1>ü§ñ Combined Bot Dashboard</h1>
      <p>Real-time onboarding and translation analytics</p>
    </div>
    
    <div class="content">
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number" id="totalUsers"><%= stats.total || 0 %></div>
          <div class="stat-label">üë• Total Users</div>
        </div>
        
        <div class="stat-card verified">
          <div class="stat-number" id="verifiedUsers"><%= stats.verified || 0 %></div>
          <div class="stat-label">‚úÖ Verified</div>
        </div>
        
        <div class="stat-card profiled">
          <div class="stat-number" id="profiledUsers"><%= stats.profiled || 0 %></div>
          <div class="stat-label">üìã Profile Complete</div>
        </div>
        
        <div class="stat-card alliance">
          <div class="stat-number" id="allianceUsers"><%= stats.withAlliance || 0 %></div>
          <div class="stat-label">üõ°Ô∏è Alliance Selected</div>
        </div>
        
        <div class="stat-card translation">
          <div class="stat-number" id="translationUsers"><%= stats.autoTranslateUsers || 0 %></div>
          <div class="stat-label">üåê Auto-Translation</div>
        </div>
      </div>
      
      <div class="charts-section">
        <div class="chart-container">
          <h3>üõ°Ô∏è Alliance Distribution</h3>
          <% if (Object.keys(allianceCounts || {}).length > 0) { %>
            <canvas id="allianceChart" width="400" height="300"></canvas>
          <% } else { %>
            <p style="text-align: center; color: #666; padding: 50px;">No alliance data available yet.</p>
          <% } %>
        </div>
        
        <div class="chart-container">
          <h3>üåê Language Distribution</h3>
          <% if (Object.keys(languageCounts || {}).length > 0) { %>
            <canvas id="languageChart" width="400" height="300"></canvas>
          <% } else { %>
            <p style="text-align: center; color: #666; padding: 50px;">No language data available yet.</p>
          <% } %>
        </div>
      </div>
      
      <div class="recent-users">
        <h3>üìã Recent Users</h3>
        <div class="user-list">
          <% if (recentUsers && recentUsers.length > 0) { %>
            <% recentUsers.forEach(function(user) { %>
              <div class="user-item">
                <div class="user-info">
                  <div class="user-name"><%= user.inGameName || user.userId || 'Unknown User' %></div>
                  <div class="user-details">
                    <%= user.alliance || 'No Alliance' %> ‚Ä¢ 
                    <%= user.language || 'No Language Set' %> ‚Ä¢ 
                    <%= new Date(user.joinedAt).toLocaleDateString() %>
                  </div>
                </div>
                <div class="user-badges">
                  <% if (user.verified) { %>
                    <span class="badge verified">‚úÖ Verified</span>
                  <% } %>
                  <% if (user.autoTranslate) { %>
                    <span class="badge translation">üåê Translation</span>
                  <% } %>
                  <% if (user.alliance) { %>
                    <span class="badge alliance">üõ°Ô∏è <%= user.alliance %></span>
                  <% } %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p style="text-align: center; color: #666; padding: 50px;">No users yet.</p>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="footer">
      <p>Combined Discord Bot Dashboard ‚Ä¢ Last updated: <span id="lastUpdate"><%= new Date().toLocaleString() %></span></p>
    </div>
  </div>
  
  <script>
    // Initialize Socket.IO
    const socket = io();
    
    // Alliance Chart
    <% if (Object.keys(allianceCounts || {}).length > 0) { %>
      const allianceCtx = document.getElementById('allianceChart').getContext('2d');
      const allianceChart = new Chart(allianceCtx, {
        type: 'doughnut',
        data: {
          labels: <%- JSON.stringify(Object.keys(allianceCounts)) %>,
          datasets: [{
            data: <%- JSON.stringify(Object.values(allianceCounts)) %>,
            backgroundColor: [
              '#FF6384',
              '#36A2EB',
              '#FFCE56',
              '#4BC0C0',
              '#9966FF',
              '#FF9F40'
            ]
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom'
            }
          }
        }
      });
    <% } %>
    
    // Language Chart
    <% if (Object.keys(languageCounts || {}).length > 0) { %>
      const languageCtx = document.getElementById('languageChart').getContext('2d');
      const languageChart = new Chart(languageCtx, {
        type: 'bar',
        data: {
          labels: <%- JSON.stringify(Object.keys(languageCounts)) %>,
          datasets: [{
            label: 'Users',
            data: <%- JSON.stringify(Object.values(languageCounts)) %>,
            backgroundColor: 'rgba(54, 162, 235, 0.8)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });
    <% } %>
    
    // Real-time updates
    socket.on('statsUpdate', function(stats) {
      document.getElementById('totalUsers').textContent = stats.total || 0;
      document.getElementById('verifiedUsers').textContent = stats.verified || 0;
      document.getElementById('profiledUsers').textContent = stats.profiled || 0;
      document.getElementById('allianceUsers').textContent = stats.withAlliance || 0;
      document.getElementById('translationUsers').textContent = stats.autoTranslateUsers || 0;
      document.getElementById('lastUpdate').textContent = new Date().toLocaleString();
    });
    
    // Auto-refresh page every 5 minutes
    setTimeout(() => {
      location.reload();
    }, 300000);
  </script>
</body>
</html>
